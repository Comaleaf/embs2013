#include "buffer.hch"

#define BUFFER_WIDTH 4096

mpram {
	wom unsigned 12 write[BUFFER_WIDTH];
	rom unsigned 12 read[BUFFER_WIDTH];
} buffer with {block=1};

void buffer_driver() {
	unsigned 12 write_word;
	
	par {
		// Read
		while (1) {
			if (buffer_used > 0) {
				par {
					buffer_read ! buffer.read[buffer_cursor_read];
					buffer_used--;
					buffer_cursor_read++;
				}
			}
			else {
				delay;
			}
		}
		// Write
		while (1) {
			if (buffer_used < BUFFER_WIDTH-2) {
				buffer_write ? write_word;
				par {
					buffer.write[buffer_cursor_write] = write_word;
					buffer_used++;
					buffer_cursor_write++;
				}
			}
			else {
				delay;
			}
		}
	}
}